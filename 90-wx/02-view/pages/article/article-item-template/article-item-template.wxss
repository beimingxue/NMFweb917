.article-item{
  display: flex;
  flex-direction: column;
  border-top: 2px solid #ddd; 
}
.article-head{
  height: 60px;
  line-height: 60px;
  margin-top: 5px; 
}
.article-head-img{
  width: 24px;
  height: 24px;
  border-radius: 50%;
  margin: 10px;
}
.article-head-text{
  height: 24px;
  line-height: 24px;
}

.article-title-text{
  padding: 10px;
  font-size: 18px;
  font-weight: 800;
}
.article-title-img{
  margin-top: 10px;
  width: 100%;
}
.article-title-main{
   font-size: 15px;
   letter-spacing: 2px;
   padding: 10px;
}
.article-footer{
  height: 50px;
  line-height: 50px;
  padding: 10px
}
.article-footer-img{
   width: 12px;
   height: 12px;
   margin-right: 10px;
   margin-left: 10px;
}
.article-footer-text{
  font-size: 12px;
  font-weight: 400;
}
